<%- include('./shared/header.ejs') %>
		


        <div class="container d-flex flex-column justify-content-center text-center py-5">

            <div class="profile bg-white border py-4 mt-5 position-relative">
                <img src="/img/avatar.png" alt="profile"/>
                <h3 class="text-muted mt-5 mb-2 text-capitalize"><%= name %></h3>
                <button class="btn btn-saraha rounded-pill px-4 " type="button" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fa-solid fa-share-nodes"></i> Share Profile</button>
            </div>

            <% if (messagesUser.length < 1) { %>
             
                <div class="bg-white border py-5 my-5">
                    <p class="text-muted">You don't have any messages...</p>
                </div>

            <% } %>


            <% if (messagesUser.length > 0) { %>
             
                <div class="container d-flex flex-column mt-5">

                    <% for( let index = 0; index < messagesUser.length; index++ ) { %>
            
                        <div class="bg-white border py-4 mb-3 text-muted">
                            <p><%= messagesUser[index] %></p>
                        </div>

                    <% } %>

                </div>

            <% } %>

            

        </div>
        
        
        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Share Profile</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <a href="<%= protocol %>://<%= host %>/user/<%= Id %>" target="_blank"><%= protocol %>://<%= host %>/user/<%= Id %></a>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
            </div>
        </div>
     


<%- include('./shared/footer.ejs') %>